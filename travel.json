---
layout: null
---
{
  "trips": [{% for trip in site.categories.travel %}
    {
      "id": "{{ trip.path | replace: '_posts/travel/','' | replace: '.md','' }}",
      "url": "{{ site.url }}{{ trip.url }}",
      "layout": "{{ trip.layout }}",
      "title": "{{ trip.title | escape }}",
      "location": {
        "locality": "{{ trip.location.locality | escape }}",
        "region": "{{ trip.location.region | escape }}",
        "country": "{{ trip.location.country | escape }}",
        "place": "{{ trip.location.place | escape }}",
        "prep": "{{ trip.location.prep | escape }}"
      },
      "date": "{{ trip.date | escape }}",
      {% if trip.map %}
        "map": {
          "location": "{{ trip.map.location | escape }}",
          "zoom": "{{ trip.map.zoom }}",
          "kml": "{{ trip.map.kml | escape }}",
          "style": "{{ trip.map.style | escape }}"
        },
      {% else %}
        "map": null,
      {% endif %}
      "summary": "{{ trip.summary | escape }}",
      "content": "{{ trip.content | escape | strip_newlines }}",
      "gallery-gridtype": "{{ trip.gallery[0].gridtype }}",
      "gallery": [{% for photo in trip.gallery offset:1 %}
        {
          "type": "{{ photo.type }}",
          "src": "{{ photo.src }}",
          "alt": "{{ photo.alt | escape }}",
          "bgpos": "{{ photo.bgpos }}",
          "bgpad": "{{ photo.bgpad }}",
          "comment": "{{ photo.comment | escape }}"
        }
        {% if forloop.last %}{% else %},{% endif %}
      {% endfor %}]
    }
    {% if forloop.last %}{% else %},{% endif %}
  {% endfor %}]
}
